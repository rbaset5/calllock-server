# ===========================================
# CallLock HVAC Configuration
# ===========================================

# Retell AI
RETELL_API_KEY=key_your_retell_api_key

# ===========================================
# LLM Provider Configuration
# ===========================================
# Choose which LLM to use: "claude" or "openai"
LLM_PROVIDER=claude

# Anthropic (Claude) - Required if LLM_PROVIDER=claude
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# OpenAI - Required if LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your_openai_api_key

# Server Configuration
PORT=8080

# Render Deployment (for keep-alive pings)
RENDER_URL=https://your-app.onrender.com

# ===========================================
# Security & Infrastructure
# ===========================================

# API Key for authenticating REST endpoint requests
# Generate a secure random string (e.g., openssl rand -hex 32)
API_SECRET_KEY=

# Log level for Pino logger (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# Business Configuration
# ===========================================

BUSINESS_NAME=ACE Cooling
SERVICE_AREA=Austin and surrounding areas within 30 miles
BUSINESS_PHONE=+15125551234

# Service Area ZIP Codes (comma-separated)
SERVICE_AREA_ZIPS=78701,78702,78703,78704,78705,78721,78722,78723,78724,78725

# ===========================================
# HVAC Emergency Thresholds
# ===========================================

# Temperature thresholds for Tier 2 urgency (Fahrenheit)
HVAC_EMERGENCY_HEAT_THRESHOLD_F=40
HVAC_EMERGENCY_COOL_THRESHOLD_F=100

# Emergency callback promise (minutes)
EMERGENCY_CALLBACK_MINUTES=15

# ===========================================
# Emergency Escalation
# ===========================================

# On-call technician phone number for Tier 2 urgent transfers
ON_CALL_PHONE_NUMBER=+15125559999

# Phone number to receive emergency SMS alerts
EMERGENCY_SMS_NUMBER=+15125559999

# ===========================================
# Twilio SMS (for emergency alerts)
# ===========================================

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+15125550000

# ===========================================
# Cal.com Integration
# ===========================================

CAL_COM_API_KEY=cal_live_your_api_key
CAL_COM_EVENT_TYPE_ID=
CAL_COM_USERNAME=

# ===========================================
# Supabase (for persistence)
# ===========================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# n8n Webhooks (optional)
# ===========================================

N8N_WEBHOOK_BASE_URL=
N8N_WEBHOOK_SECRET=

# ===========================================
# CallLock Dashboard Integration
# ===========================================
# Connect to the CallLock Dashboard to track all calls
# After setup, configure Retell's post-call webhook to point to:
# https://your-server.com/webhook/retell/call-ended

# Dashboard webhook URL (your deployed dashboard)
DASHBOARD_WEBHOOK_URL=https://your-dashboard.vercel.app/api/webhook/jobs

# Dashboard webhook secret (must match dashboard's WEBHOOK_SECRET)
# Generate with: openssl rand -hex 32
DASHBOARD_WEBHOOK_SECRET=

# Email of the business owner in the dashboard (used to associate jobs)
DASHBOARD_USER_EMAIL=owner@business.com
